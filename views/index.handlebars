<!-- Row 1 -->
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <!-- Jumbotron -->
        <div class="jumbotron">
            <h1 class="display-4">Dictionary Scrapper</h1>
            <p class="lead">Let's scrape a dictionary</p>
            <hr class="my-4">
            <p>Wooo HOOOOO!</p>
            <a class="btn btn-danger btn-lg" role="button" id="scrape-btn">Scrape</a>
            <a class="btn btn-success btn-lg" role="button" id="view-btn" href="/dictionary">View</a>
            <a class="btn btn-warning btn-lg" role="button" id="save-all-btn">Saved</a>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>

{{!-- Row 2 --}}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        {{!-- Cards --}}
        {{#each result}}
        <div class="card d-inline-flex flex-row bd-highlight mb-3 text-wrap" id="allCard">
            <div class="card-body">
                <h5 class="card-title text-wrap">{{title}}</h5>
                <p class="card-text text-wrap" style="word-wrap: break-word">{{link}}</p>
                <p class="card-text text-wrap">{{content}}</p>
                <button type="button" class="btn btn-success" id="addNote-btn" data-id={{_id}}>Click to add a
                    Note</button>
                <button type="button" class="btn btn-primary" id="viewNote-btn" data-id={{_id}}>View note</button>
                <button type="button" class="btn btn-warning" id="saveNote-btn" data-id={{_id}}>Save</button>
                <button type="button" class="btn btn-danger" id="del-btn" data-id={{_id}}>Delete</button>
            </div>
        </div>

        <div class="modal fade" id={{_id}} tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">

                        <h5 class="modal-title" id="name" +{{_id}}>{{title}}</h5>

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{#if name}}
                        <input class="form-control" type="text" placeholder="Enter your name" data-value={{_id}}><br>
                        {{else}}
                        <input class="form-control" type="text" placeholder="Enter your name"data-value={{_id}}><br>
                        {{/if}}
                        <textarea class="form-control note text-dark" rows="2" data-text={{_id}}></textarea>
                    </div>
                    <div class="modal-footer">
                        {{#if name}}
                        <h5 class="modal-title" data-note={{_id}}>Leave Your Note Here!</h5>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" data-note={{_id}}>Add
                            Note</button>
                        {{else}}
                        <h5 class="modal-title">Leave Your Note Here!</h5>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Add
                            Note</button>
                        {{/if}}

                    </div>
                </div>
            </div>
        </div>
        {{/each}}

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Link</th>
                    <th scope="col">Content</th>
                </tr>
            </thead>
            <tbody id="savedItems">

            </tbody>
        </table>
        <div class="col-md-2"></div>

    </div>